            <dt>College:</dt><dd><%= user.profile.college %></dd>
            <dt>Hometown:</dt><dd><%= user.profile.hometown %></dd>
            <dt>Currently Lives:</dt><dd><%= user.profile.currently_lives %></dd>
          </dl>
        </div>
      </section>

      <!-- Photos -->
