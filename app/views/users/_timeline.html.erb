    </div>

  </div>

  <!-- Timeline -->
  <div class="col-sm-7 col-sm-offset-1 timeline-container clearfix">

    <div class="pull-left visible-xs offcanvas-toggle-container">
      <button type="button" class="btn btn-primary offcanvas-toggle" data-toggle="offcanvas">
        <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
      </button>
    </div>

    <div class="row">

      <%# Render post form only if current user is this user %>
      <% if is_current_user?(user) %>

        <%= render :partial => 'posts/form', :locals => {:post => user.posts.build} %>

      <% end %>

      <!-- Posts -->
      <% if posts.present? %>
        <% posts.order(:created_at => 'DESC').each do |post| %>

          <%# This could go into a partial under posts? %>
          <div class="post col-xs-12">
            <header>
              <div class="row">
                <div class="col-xs-2">
                  <div class="post-profile-image-container">
                    <a href="/about">
                      <img src="/assets/images/harry_potter_small.jpg" alt="Image"/>
                    </a>
                  </div>
                </div>
                <div class="col-xs-8 post-info-container">
                  <a href="/about">
                    <%= post.user.name %>
                  </a>
                  <time>
                    Posted on <%= post.date %>
                  </time>
                </div>
              </div>
            </header>
            <article>
              <p>
                <%= post.body %>
              </p>
            </article>
            <footer>
              <div class="row post-footer-links">
                <div class="col-xs-1 like-link-container">
                  <a href="#">
                    Like
                  </a>
                </div>
                <div class="col-xs-2 col-xs-offset-1 comment-link-container">
                  <a href="#">
                    Comment
                  </a>
                </div>

                <% if is_current_user?(post.user) %>

                  <div class="col-xs-8 delete-link-container">
                    <%= link_to('Delete', user_post_path(user, post), :method => :delete, :data => {:confirm => 'Are you sure?'}, :class => 'text-danger') %>
                  </div>

                <% end %>


              </div>
            </footer>
          </div><!-- post col -->

        <% end %>

      <% else %>

        <div class="no-posts col-xs-12">
          <article>
            <p class="text-warning">
              No posts yet!
            </p>
          </article>
        </div><!-- post col -->

      <% end %>

    </div><!-- row -->

  </div><!-- col -->

</section><!-- timeline row -->




