      <!-- Friends -->
      <section id="friends" class="col-xs-10 col-sm-12">
        <header class="details-header">
          <h1>
            Friends
          </h1>
        </header>
        <div class="friends-container">

          <div class="row">
            
            <div class="col-xs-12 col-sm-4">
              <img src="/assets/images/user_silhouette_generic.gif.png" alt="Friend"/>
